{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "outDir": "dist",
    "lib": [
      "dom",
      "es6",
      "es2016",
      "es2017",
      "es2020"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js"
  ]
}